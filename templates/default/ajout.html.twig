{% extends 'base.html.twig' %}

{% block title %}Gourdy - Nouveau Sujet{% endblock %}

{% block body %}
<div class="py-5">
    <div class="container py-5">
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
            <div class="col-lg-6 bg-light border border-dark border-3 rounded-3 shadow-lg p-3 mb-5 bg-body">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6 text-center mt-5">
                        <h2 class="text-center">Nouveau sujet</h2>
                    </div>
                </div>
                 <div class="container py-5">
                 {% if not form.vars.valid %}
                    {{ form_start(form, {'attr':{'class':'was-validated'}}) }}
                {% else %}
                    {{ form_start(form) }}
                {% endif %}
                    <div class="mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class':'form-control'}} ) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.contenu) }}
                        {{ form_widget(form.contenu, {'attr': {'class':'form-control'}} ) }}
                    </div>
                    {{ form_label(form.categories) }}

                    <table class="table border">
                        {% for CategoryField in form.categories %}
                            <tr>
                                <td>{{ form_label(CategoryField) }}</td>
                                <td> {{ form_widget(CategoryField) }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                    {{ form_rest(form) }}
                    <div class="mb-3 text-center">
                        <button class="btn btn-primary" type="submit">Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
